#!/bin/sh

export PATH=/sbin:/usr/sbin:/usr/local/sbin

usage="Usage: $0 [permit|deny] [MAC] [IP] [Class]"
action=$1
mac=$2
ip=$3
class=$4

if [ "$action" == "permit" ]; then
    cmd="-A"
elif [ "$action" == "deny" ]; then
    cmd="-D"
else
    echo $usage
    exit 1
fi

if [ -z "$ip" ]; then
    echo $usage
    exit 1
fi

mark=1

iptables -t mangle $cmd NoCat -s $ip -j MARK --set-mark $mark

